{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["public/**", "uploads/**", "uploads-paintings/**", "config-mongodb/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "SESSION_SECRET": "@session_secret",
    "JWT_SECRET": "@jwt_secret",
    "PORT": "5000"
  }
}
